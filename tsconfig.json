{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // âœ… Must match moduleResolution
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "rootDir": "src",
    "outDir": "dist",

    /* Type-safety and interop */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,

    /* Node & Feathers types */
    "types": ["node"],

    /* Quality-of-life */
    "sourceMap": true,
    "ignoreDeprecations": "6.0"
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],

  "exclude": ["node_modules", "dist"]
}
