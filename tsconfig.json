{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2020",
    "ignoreDeprecations": "6.0",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "types/**/*.d.ts"]
}
